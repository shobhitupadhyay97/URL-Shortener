<% provide(:title, "URL Shortener") %>
<h1>URL Shortener</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:url, url: urls_path) do |f| %>
    <%= render 'shared/error_msg' %>

      <%= f.label :long_url %>
      <%= f.text_field :long_url, class: 'form-control' %>

      <%= f.label :domain %>
      <%= f.text_field :domain, class: 'form-control' %>

      <%= f.submit "Create Short URL", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>